<div class="pagebanner" style="background-image: linear-gradient(-225deg, rgba(255,175,123,0.5) 0%, rgba(215,109,119,0.4) 50%, rgba(58,28,113,0.4) 75%), url('<%= cl_image_path 'bannerfont_dm4pkp', crop: :fill %>');">
  <div class="pagebanner-content">
    <div class="text-center">
      <h1 style= "background-color: rgba(215,109,119, 0.8);"> Our selection</h1>
      <p style= "background-color: rgba(58,28,113, 0.5);"> Discover our selection of the best meeting rooms, just for you.</p>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <% @meeting_rooms.each do |mr| %>
    <div class="col-xs-12 col-md-4">
          <div class="card">
        <div class="card-category"><%= mr.name %> </div>
        <div class="card-image" style="background-image: url('<%= cl_image_path mr.photo,crop: :fill %>');"></div>
        <div class="card-description">
          <h2><%= mr.name %></h2>
          <p><%= mr.description %></p>
        </div>
        <div class="card-user">
          <i class="fa fa-user" aria-hidden="true"></i>
          <%= mr.n_people %>
        </div>
        <%= link_to "#" , meeting_room_path(mr), class: "card-link" %>
      </div>
    </div>
    <% end %>
  </div>
</div>

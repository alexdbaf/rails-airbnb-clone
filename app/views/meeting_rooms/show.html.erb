<div class="pagebanner" style="background-image: linear-gradient(-225deg, rgba(255,175,123,0.5) 0%, rgba(215,109,119,0.5) 50%, rgba(58,28,113,0.5) 75%), url('<%= cl_image_path @meeting_room.photo,crop: :fill %>');">
  <div class="pagebanner-content">
    <div class="text-center">
      <h1 style= "background-color: rgba(215,109,119, 0.8);"> <%=  @meeting_room.name %></h1>
      <p style= "background-color: rgba(58,28,113, 0.5);">  <%= @meeting_room.description  %></p>
      <div class="btn btn-danger btn-lg">BOOK NOW</div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-4"> <h1> How many persons fit ? <br></h1>
    <% @meeting_room.n_people.to_i.times do %>
    <i class="fa fa-user" aria-hidden="true" style="font-size: 24px"></i><%end %></div>
    <div class="col-xs-12 col-md-4">EST </div>
    <div class="col-xs-12 col-md-4"> UN TEST</div>
  </div>
</div>

<div class="pagebanner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= cl_image_path @meeting_room.photo,crop: :fill %>');">
  <div class="pagebanner-content">
    <div class="text-center">
      <h1><%= @meeting_room.name %></h1>
      <div class="btn btn-danger">BOOK NOW</div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">


    <div class="card-show">

      <div class="card-show-description col-md-8">
        <h2>Description</h2>
        <p> <%= @meeting_room.description  %></p>
        <%= cl_image_tag(@meeting_room.photo, :width => 600, :height => 250, :crop => :fill) %>

      </div>


      <div class="card-show-right  col-md-4">
        <h4> Availaibility</h4>

        <p>Morning

          <%if @meeting_room.morning %>
          <i class="fa fa-check-circle-o"></i>
          <% else %>
          <i class="fa fa-circle-o"></i>
          <%end%>
        </p>

        <p>Afternoon

          <%if @meeting_room.afternoon %>
          <i class="fa fa-check-circle-o"></i>
          <% else %>
          <i class="fa fa-circle-o"></i>
          <%end%>
        </p>


        <p>Saturday

          <%if @meeting_room.saturday_open %>
          <i class="fa fa-check-circle-o"></i>
          <% else %>
          <i class="fa fa-circle-o"></i>
          <%end%>
        </p>




        <p>Sunday

          <%if @meeting_room.sunday_open %>
          <i class="fa fa-check-circle-o"></i>
          <% else %>
          <i class="fa fa-circle-o"></i>
          <%end%>
        </p>

        <br>

        <h4> Hourly price</h4>
        <p> <%= @meeting_room.hourly_price  %> â‚¬ /h</p>

        <br>


        <h4> Size <br></h4>
        <p> <%= @meeting_room.n_people  %> people</p>

        <% @meeting_room.n_people.to_i.times do %>
        <i class="fa fa-user" aria-hidden="true" style="font-size: 10px"></i>
        <%end %>

      </div>


    </div>
  </div>
</div>

<div class="pagebanner" style="background-image: linear-gradient(-225deg, rgba(255,175,123,0.5) 0%, rgba(215,109,119,0.5) 50%, rgba(58,28,113,0.5) 75%), url('<%= cl_image_path @meeting_room.photo, gravity: :south, crop: :fill; %>');">
  <div class="pagebanner-content">
    <div class="text-center">
      <h1 style= "background-color: rgba(215,109,119, 0.8);"> <%=  @meeting_room.name %></h1>
      <p style= "background-color: rgba(58,28,113, 0.5);">  <%= @meeting_room.description  %></p>
      <div class="btn btn-danger btn-lg">BOOK NOW</div>
    </div>
  </div>
</div>

<div class="container" style="margin-top:30px;">
  <div class="row">

    <!-- <div class="card-show"> -->

    <div class="col-xs-12 col-md-8">
     <div class="card-show-description">

      <h2>Description</h2>
      <p> <%= @meeting_room.description  %></p>
      <%= cl_image_tag(@meeting_room.photo, :width => 600, :height => 250, :crop => :fill, :radius => 10) %>

    </div>
  </div>

  <div class="col-xs-12 col-md-4">
    <div class="card-show-right">
      <h4> Availaibility</h4>

      <p><%if @meeting_room.morning %>
        <i class="fa fa-check-circle-o"></i>
        <% else %>
        <i class="fa fa-circle-o"></i>
        <%end%> Morning
      </p>

      <p><%if @meeting_room.afternoon %>
        <i class="fa fa-check-circle-o"></i>
        <% else %>
        <i class="fa fa-circle-o"></i>
        <%end%> Afternoon
      </p>

      <p><%if @meeting_room.saturday_open %>
        <i class="fa fa-check-circle-o"></i>
        <% else %>
        <i class="fa fa-circle-o"></i>
        <%end%> Saturday
      </p>

      <p><%if @meeting_room.sunday_open %>
        <i class="fa fa-check-circle-o"></i>
        <% else %>
        <i class="fa fa-circle-o"></i>
        <%end%> Sunday
      </p>

      <br>

      <h4> Hourly price</h4>
      <p> <%= @meeting_room.hourly_price  %> â‚¬ /h</p>

      <br>


      <h4> Size <br></h4>
      <p> <%= @meeting_room.n_people  %> people</p>

      <% @meeting_room.n_people.to_i.times do %>
      <i class="fa fa-user" aria-hidden="true" style="font-size: 10px"></i>
      <%end %>

    </div>

  </div>

  <!-- </div> -->
</div>
</div>

<div class="pagebanner" style="background-image: linear-gradient(-225deg, rgba(38,208,206,0.5) 0%, rgba(26,41,128,0.5) 50%), url('<%= cl_image_path 'bannerfont_dm4pkp', crop: :fill %>');">
      <h1 style= "background-color: rgba(38,208,206,0.5);">Our selection</h1>
      <p style= "background-color: rgba(26,41,128,0.5);">Discover our selection of the best meeting rooms, just for you.</p>
</div>

<div class="container">
  <div class="row">
    <% @meeting_rooms.each do |mr| %>
    <div class="col-xs-12 col-md-4">
          <div class="card">
        <div class="card-category"><%= mr.name %> </div>
        <div class="card-image" style="background-image: url('<%= mr.photo %>');"></div>
        <div class="card-description">
          <h2><%= mr.name %></h2>
          <p><%= mr.description %></p>
        </div>
        <div class="card-user">
          <i class="fa fa-user" aria-hidden="true"></i>
          <%= mr.n_people %>
        </div>
        <%= link_to "#" , meeting_room_path(mr), class: "card-link" %>
      </div>
    </div>
    <% end %>
  </div>
</div>
